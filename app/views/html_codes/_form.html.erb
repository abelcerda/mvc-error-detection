<%= form_for @htmlCode, html: {class: "form-horizontal"}  do |f| %>
  <% if @htmlCode.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@htmlCode.errors.count, "error") %> prohibited this primero from being saved:</h2>

      <ul>
      <% @htmlCode.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
      <div class="col-lg-12">
          <section class="panel">
              <header class="panel-heading">
                 Analizador de HTML
              </header>
              <div class="panel-body">
                    <% if !notice.nil?%>
                      <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong><%= notice %></strong>
                      </div>
                    <% end %>
                   
                    <!-- form_tag({controller: "people", action: "search"}, method: "get", class: "nifty_form") -->
                      <div class="form-group">
                        <label class="col-sm-2 control-label"><%= f.label :archivo %></label>
                        <div class="col-sm-10">
                            <%= f.file_field :archivo %>
                        </div>
                      </div>
                      <button type="submit" class="btn btn-primary">Submit</button>
              </div>
          </section>
      </div>
  </div>
<%if !@leaves.nil?%>
<div class="row">
      <div class="col-lg-12">
          <section class="panel">
              <header class="panel-heading">
                 Resultados del Analisis de HTML
              </header>
              <div class="panel-body">
                <% @leaves[0].each do |leave| %>
                    <blockquote>
                      <p><%= leave[:POS][0] %>.&nbsp;&nbsp;&nbsp;<%= @rows[leave[:POS][0]-1] %></p>
                      <footer>En esta linea hay un operacion que corresponde a un <b><%= leave[:COMPONENT] %></b> (<b><%= leave[:TYPE] %></b>). Se recomienda separar los manejadores de eventos o código Javascript en archivos distintos al código HTML.</footer>
                    </blockquote>
                <% end %>
              </div>
          </section>
          <section class="panel">
              <header class="panel-heading">
                 Resultados del Analisis de Javascript
              </header>
              <div class="panel-body">
                <% @leaves[1].each do |leave| %>
                    <blockquote>
                      <p><%= leave[:POS][0] %>.&nbsp;&nbsp;&nbsp;<%= @rows[leave[:POS][0]-1] %></p>
                      <footer>En esta linea hay un operacion que corresponde a un <b><%= leave[:COMPONENT] %></b> (<b><%= leave[:TYPE] %></b>)</footer>
                    </blockquote>
                <% end %>
              </div>
</section>
>      </div>
  </div>
<%end%>
<% end %>